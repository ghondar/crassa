{
  "compilerOptions": {
    "outDir": "lib/ssr",
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2017",
      "dom"
    ],
    "module": "esnext",
    "rootDirs": [
      "src"
    ],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "strict": true,
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "resolveJsonModule": true, // Required for JSON files
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "config/*": [
        "src/config/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "containers/*": [
        "src/containers/*"
      ],
      "navigation/*": [
        "src/navigation/*"
      ],
      "reducers/*": [
        "src/reducers/*"
      ],
      "services/*": [
        "src/services/*"
      ],
      "store/*": [
        "src/store/*"
      ],
      "utils/*": [
        "src/utils/*"
      ],
      "lib/*": [
        "src/lib/*"
      ],
      "config": [
        "src/config"
      ],
      "components": [
        "src/components"
      ],
      "containers": [
        "src/containers"
      ],
      "navigation": [
        "src/navigation"
      ],
      "reducers": [
        "src/reducers"
      ],
      "services": [
        "src/services"
      ],
      "store": [
        "src/store"
      ],
      "utils": [
        "src/utils"
      ],
      "lib": [
        "src/lib"
      ]
    },
    "plugins": [{ "transform": "@zerollup/ts-transform-paths" }]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "package.json"
  ]
}